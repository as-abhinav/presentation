ul.breadcrumb
    li
       a(href='/') Home
       span.divider /
    li
       != link_to('presentations', pathTo.presentations())
       span.divider /
    li.active
       a(href='#') Details of presentation

.page-header
  h1 Details of presentation

div(about=path_to.presentation(presentation))
  table.table.table-bordered
    tbody
      tr
        td title
        td
          != presentation.title
        tr
        td content
        td
          != presentation.content
        tr
        td published
        td
          != presentation.published

.well
  != linkTo('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_presentation(presentation), {class: 'btn btn-primary'}) + ' '
  != linkTo('<i class="icon-remove icon-white"></i> Delete', pathTo.presentation(presentation), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'})
  span= ' or '
  != linkTo('Back to index', pathTo.presentations())
