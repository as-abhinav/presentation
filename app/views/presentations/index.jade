.navbar
  .navbar-inner
    ul.nav.navbar-static-top
      li
        a(href="#newPresentationDialog", data-toggle="modal")
            i.icon-plus
            |   Create New Presentation


form#newPresentationDialog.form-horizontal.modal.hide.fade(action="#",role="modal", aria-hidden="true", aria-labelledby="newPresentationDialogLabel")
    .modal-header
        button.close(type="button", data-dismiss='modal', aria-hidden='true') x
        h3 New Presentation
    .modal-body
        .control-group
            label.control-label(for="name") Name
            .controls
              input#name(type="text", name="name")
        .control-group
            label.control-label(for="description") Description
            .controls
              textarea#description(row="5", name="description")
    .modal-footer
        button.btn(type="button", data-dismiss='modal', aria-hidden="true") Close
        button.btn(type="reset") Cancel
        button.btn.btn-primary(type="submit", aria-hidden="true") Create Presentation


hr
.row
  .span12
    h2 Available Presentations

ul#presentationContainer

script#presentationTemplate(type="text/html")
    .span3
      #presentationsBox.pptbox
        .presentation
          .title <%= name %>
          .desc <%= description %>
          .control
            a.icon.remove(href="#", title="Remove the presentation")
              i.icon-trash &nbsp;
            a.icon(href="#playPresentationDialog", title="Play the presentation", data-toggle="modal")
              i.icon-play &nbsp;
            a.icon(href="#addSlideDialog", title="Add a slide in presentation", data-toggle="modal")
              i.icon-plus &nbsp;

    .span9
      .sldbox
        ul.slides
