ul.breadcrumb
    li
       a(href='/') Home
       span.divider /
    li
       != linkTo('presentations', pathTo.presentations())
       span.divider /
    li.active
       a(href='#') New presentation

.page-header
  h1 New presentation

- var form = formFor(presentation, {action: pathTo.presentations(), method: 'POST', id: "presentation_form", class: 'form-horizontal'})

!= form.begin()
include _form
.form-actions
  != form.submit('<i class="icon-ok icon-white"></i>  Create presentation', {class: 'btn btn-primary'})
  span= ' or '
  != linkTo('Cancel', pathTo.presentations(), {class: 'btn'})
!= form.end()
